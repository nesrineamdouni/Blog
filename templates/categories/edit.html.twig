{% extends 'base.html.twig' %}

{% block title %}Edit Categories{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css">
    <style>
        .card {
            margin-top: 20px;
        }

        .card-body {
            padding: 20px;
        }

        .form-control {
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-4">Edit Categories</h1>
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.created_at, {'widget': 'single_text', 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a href="{{ path('app_categories_index') }}" class="btn btn-secondary">Back to List</a>
                        </div>
                        {{ form_end(form) }}
                        <br>
                        {{ include('categories/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/><br/>
{% endblock %}